<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="2px"
    app:elevation="1dp"
    >

    <LinearLayout
        android:id="@+id/home_listview_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_listview_item_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="48px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d6d6d6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/home_listview_item_album"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:src="@drawable/album_default"
                />


            <TextView
                android:id="@+id/home_listview_item_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/home_listview_item_album"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:paddingRight="5dp"
                android:textColor="#6a6a6a"
                android:textSize="40px"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_listview_item_album"
                android:layout_toRightOf="@id/home_listview_item_album">

                <TextView
                    android:id="@+id/home_listview_item_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/item_play"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:textColor="#999999"
                    android:textSize="36px"/>

                <TextView
                    android:id="@+id/home_listview_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/item_time"
                    android:drawablePadding="5dp"
                    android:textColor="#999999"
                    android:textSize="36px"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

